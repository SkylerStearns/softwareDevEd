<%- include('partials/header'); %>

        <h1>Posts Page</h1>

        <p>For Loop</p>
        <% for(let i = 0; i < posts.length; i++) { %>
            <li>
                <%= posts[i].title %> - <strong><%= posts[i].author %></strong>
            </li>
        <% } %>

        <br>
        <br>

        <p>For Each Loop</p>
        <% posts.forEach((post) => { %>
            <li>
                <%= post.title %> - <strong><%= post.author %></strong>
            </li>
        <% }) %>

